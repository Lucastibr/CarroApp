@model CarroApp.Models.Carro

@{
    ViewData["Title"] = "Deletar";
}

<h1 class="text-center">Deletar carro</h1>

<h3 class="text-center">Quer mesmo deletar esse veículo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeDoCarro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeDoCarro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ano)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ano)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-info"><i class="fas fa-hand-point-left"></i></a>
    </form>
</div>
